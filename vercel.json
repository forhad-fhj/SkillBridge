{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "cd frontend && npm install",
  "framework": "nextjs",
  "regions": ["iad"],
  "env": {
    "DATABASE_URL": {
      "description": "PostgreSQL database connection string",
      "required": true
    },
    "PYTHON_BACKEND_URL": {
      "description": "Python backend API URL (e.g., https://api.example.com)",
      "required": true
    },
    "NEXT_PUBLIC_API_URL": {
      "description": "Next.js frontend API URL",
      "required": false,
      "value": ""
    },
    "NEXT_PUBLIC_PYTHON_BACKEND_URL": {
      "description": "Public Python backend URL for frontend",
      "required": true
    }
  },
  "functions": {
    "frontend/app/api/**/*.ts": {
      "maxDuration": 60
    }
  }
}
